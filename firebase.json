{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/to-mile/**",
        "function": "converter"
      },
      {
        "source": "/to-miles/**",
        "function": "converter"
      },
      {
        "source": "/to-mi/**",
        "function": "converter"
      },
      {
        "source": "/to-km/**",
        "function": "converter"
      },
      {
        "source": "/to-kilomter/**",
        "function": "converter"
      },
      {
        "source": "/to-kilometers/**",
        "function": "converter"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": false
    }
  }
}
